         <pb facs="111-p1.jpg"/>
         <div type="recipe" xml:id="r01">
            <!-- NOTE RULE FOR VALUE OF @xml:id (must begin with a letter) -->
            <head>Pumpkin <choice>
                  <sic>desert</sic>
                  <corr>dessert</corr>
               </choice>
            </head>
            <note type="authorial" hand="#h01">Alane<ref target="#n02" xml:id="ref02"/>&#8212;Thanksgiving 01
               good&#8212;very rich</note>
            <!-- NOTE THE @type HERE -->
            <div type="ingredients" xml:id="r01_i1">
               <list>
                  <item>1 c. sifted flour</item>
                  <item>1/2 c. quick oats<ref xml:id="r03" target="#n03"/></item>
                  <item>1/2 c. brown sugar</item>
                  <item>1/2 c. butter/marg.</item>
               </list>
            </div>
            <div type="instructions" xml:id="r01_s1" corresp="#r01_i1">
               <list>
                  <item>cream</item>
                  <item>13" x 9" pan</item>
                  <item>bake 15 min&#8212;350°</item>
               </list>
            </div>
            <div type="ingredients" xml:id="r01_i2">
               <list>
                  <item>1 lb. can pumkin</item>
                  <item>1 13 oz. evap. milk</item>
                  <item>2 eggs -</item>
                  <item>3/4 c. sugar -</item>
                  <item>1/2 tsp salt</item>
                  <item>1 tsp cinnamon</item>
                  <item>1/2 tsp ginger</item>
                  <item>1/4 tsp cloves</item>
               </list>
            </div>
            <pb facs="111-p2.jpg"/>
            <div type="instructions" xml:id="r01_s2" corresp="#r01_i2">
               <list>
                  <item>Bake 350° 20min</item>
               </list>
               <note type="authorial" hand="#h02">Note: I used "Table cream" instead of evap. milk.</note>
               <div type="ingredients" xml:id="r01_i3">
                  <list>
                     <item>1/2 c. chopped pecans</item>
                     <item>1/2 c. brown sugar</item>
                     <item>2T. Butter</item>
                  </list>
               </div>
               <div type="instructions" xml:id="r01_s3" corresp="#r01_i3">
                  <list>
                     <item>combine</item>
                     <item>sprinkle over filling -</item>
                     <item>Bake longer 20 min or so until topping is set.</item>
                  </list>
               </div>
            </div>
         </div>

